@model KioskWebWizard.ViewModel.Kiosk.KioskInitialCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Utwórz nowy kiosk</h2>
<hr />
<div class="table text-md-center d-flex justify-content-center pt-lg-5">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa kiosku</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="KioskTemplate" class="control-label">Wybierz szablon dla kiosku</label>
                <select asp-for="@Model.KioskTemplateID" class="form-control" asp-items="ViewBag.KioskTemplate">
                </select>
                <span asp-validation-for="KioskTemplate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Wróc do strony głównej</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
